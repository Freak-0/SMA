import requests

video_id = "YqKYpgZ9FWU" ##
api_key = "AIzaSyBQNf5-asyWvImw951Ncs38S-Rf8VbY4NA" ##

comments_url = f"https://www.googleapis.com/youtube/v3/commentThreads?part=snippet&videoId={video_id}&key={api_key}"

